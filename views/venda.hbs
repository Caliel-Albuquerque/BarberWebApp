<div class="container">
    <div class="container_information">
        <h1>Nova venda</h1>
    </div>

    <form class="form_atendimento" action="/cadAtendimento" method="post">
        <label for="nome" class="label-input">Serviço</label>
        <div class="content_inputs">
            <select class="opcoesServicos" name="opcoesServicos" id="opcoesServicos">
                {{#each servicos}}

                <option value="{{nome}}">{{nome}}</option>

                {{/each}}
            </select>
        </div>


        <label for="telefone" class="label-input">Valor</label>
        <div class="content_inputs">
            <select class="opcoesValor" name="opcoesValor" id="opcoesValor">
                {{#each servicos}}

                <option value="{{valor}}">{{valor}}</option>

                {{/each}}
            </select>
        </div>

        <label for="email" class="label-input">Email</label>
        <div class="content_inputs">

            <input class="opcoesDate" type="date" name="dataAtendimento">
        </div>

        <label for="senha" class="label-input">Forma de pagamento</label>
        <div class="content_inputs">
            <select class="opcoesPagamento" name="opcoesPagamento" id="opcoesPagamento">
                <option value="">Dinheiro</option>
                <option value="">Cartão</option>
                <option value="">Pix</option>
            </select>
        </div>


        <div class="flex_column options_add_item">

            <a href="/home"><button type="button" class="btn_option">Cancelar</button></a>


            <button type="submit" class="btn_option">Salvar</button>
        </div>

    </form>

</div>